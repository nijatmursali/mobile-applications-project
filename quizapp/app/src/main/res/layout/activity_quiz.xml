<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/quiz_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="What country does this flag belong to?"
            android:textColor="#363A43"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/quiz_image"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/ic_flag_of_argentina"
            />

            <LinearLayout
                android:id="@+id/progress_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:progressBarStyleHorizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:max="10"
                    android:minHeight="50dp"
                    android:progress="0"
                    android:indeterminate="false"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_progress"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:textColor="#363A43"
                    android:textSize="20sp"
                    android:text="0/10"
                    />



            </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_options1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="#7a8089"
            android:background="@drawable/text_options_drawable"
            android:textSize="18sp"
            android:text="Argentina"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_options2"
            android:layout_margin="5dp"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="#7a8089"
            android:background="@drawable/text_options_drawable"
            android:textSize="18sp"
            android:text="Armenia"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_options3"
            android:layout_margin="5dp"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="#7a8089"
            android:background="@drawable/text_options_drawable"
            android:textSize="18sp"
            android:text="Australia"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_options4"
            android:layout_margin="5dp"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="#7a8089"
            android:background="@drawable/text_options_drawable"
            android:textSize="18sp"
            android:text="Austria"
            />

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/design_default_color_primary"
            android:textColor="#fff"
            android:text="GO TO NEXT QUESTION"
            android:textSize="18sp"
            >

        </Button>

    </LinearLayout>

</ScrollView>